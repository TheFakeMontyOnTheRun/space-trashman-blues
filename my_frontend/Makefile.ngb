CC = zcc

CFLAGS = +gb -O3 --opt-code-size -lndos -DGAMEPAD -vn -I../core/include -DRES128X128 -DCAN_PICK_OBJECT_AT_ANY_DISTANCE -DRLE_COMPRESSED_MAPS -DEMBEDDED_DATA

all: derelict.gb

derelict.gb: src/demo.o src/gb.o ../core/src/Core.o ../core/src/Derelict.o
	$(CC) $(CFLAGS)  -create-app   -oderelict.gb src/demo.o src/gb.o  ../core/src/Core.o ../core/src/Derelict.o $(LDFLAGS)

clean:
	rm -f $(OBJS) $(TARGET)
	$(RM) -f *.obj *.sym *.map *.o* *.bin zcc_opt.def *.reloc *.cas *.COM *.img ex8 *.rom
	$(RM) -f ../core/src/*.o src/*.o ../common/src/*.o
	rm -f *~
