CC = zcc

CFLAGS = \
        +msx \
        -subtype=rom \
        -compiler=sdcc \
        -SO3 \
        --max-allocs-per-node200000 \
        -lndos \
        --opt-code-speed \
        -pragma-define:CLIB_EXIT_STACK_SIZE=0 \
        -pragma-define:CRT_MODEL=2 \
        --opt-code-speed \
        -vn \
        -Iinclude \
        -I../core/include \
        -I../common/include \
        -DXRES_FRAMEBUFFER=256 \
        -DYRES_FRAMEBUFFER=192 \
        -DTMS9918 \
        -DCAN_PICK_OBJECT_AT_ANY_DISTANCE \
        -DSUPPORTS_HACKING_MINIGAME \
        -DSUPPORTS_ROOM_TRANSITION_ANIMATION \
        -DRLE_COMPRESSED_MAPS \
        -DEMBEDDED_DATA

TARGET = derelict.rom

OBJS = \
    src/Engine3D.o \
    src/TMS9918.o \
    ../common/src/AY-3-8910.o \
    src/KeyboardUI.o \
    src/msx.o \
    src/Menu.o \
    src/HackingMinigame.o \
    ../core/src/Core.o \
    ../core/src/Derelict.o \
    ../common/src/Common.o

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -create-app -o $(TARGET) $(OBJS) $(LDFLAGS)

clean:
	rm -f $(OBJS) $(TARGET)
	rm -f *~
